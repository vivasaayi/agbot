# Environment variables for agrodrone workspace
RUST_LOG=debug
RUST_BACKTRACE=1

# Flight controller connection
MAVLINK_SERIAL_PORT=/dev/ttyUSB0
MAVLINK_BAUD_RATE=57600

# LiDAR connection  
LIDAR_SERIAL_PORT=/dev/ttyUSB1
LIDAR_BAUD_RATE=230400

# Camera settings
CAMERA_DEVICE=/dev/video0
MULTISPECTRAL_BANDS=4

# Data storage
DATA_ROOT_PATH=/opt/agrodrone/data
MISSION_DATA_PATH=/opt/agrodrone/missions

# Server configuration
WS_BIND_ADDRESS=0.0.0.0:8080
API_BIND_ADDRESS=0.0.0.0:3000

# Runtime mode: SIMULATION or FLIGHT
RUNTIME_MODE=SIMULATION

# GPS/Navigation
HOME_LATITUDE=37.7749
HOME_LONGITUDE=-122.4194
HOME_ALTITUDE=100.0

# Processing settings
NDVI_OUTPUT_FORMAT=GEOTIFF
LIDAR_GRID_RESOLUTION=0.1
